#define LOG_MSG(level,fmt,...) \
		printf( \
				"[%s:%d:%s()] [%s] " fmt, \
                __FILE__, \
                __LINE__, \
                __func__, \
                level, \
                __VA_ARGS__ \
		)

#ifdef DEBUG
#define __LOG_TRACE__(fmt,...) LOG_MSG("trace",fmt,__VA_ARGS__)
#define LOG_DEBUG(fmt,...) LOG_MSG("debug",fmt,__VA_ARGS__)
#else
#define LOG_TRACE(fmt,...)
#define LOG_DEBUG(fmt,...)
#endif
#define LOG_INF(fmt,...) LOG_MSG("info",fmt,__VA_ARGS__)
#define LOG_WAR(fmt,...) LOG_MSG("warning",fmt,__VA_ARGS__)
#define LOG_ERR(fmt,...) LOG_MSG("error",fmt,__VA_ARGS__)
#define LOG_FATAL(fmt,...) LOG_MSG("fatal",fmt,__VA_ARGS__)
