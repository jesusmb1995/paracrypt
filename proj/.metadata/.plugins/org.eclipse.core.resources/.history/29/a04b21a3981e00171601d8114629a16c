#pragma once

#include "AES.hpp"
#include "CudaAES.hpp"

namespace paracrypt {

    class CudaEcbAES16B:public CudaAES {
      protected:
    int cuda_ecb_aes_encrypt(int gridSize, int threadsPerBloc, unsigned char * data, int n_blocks, uint32_t* key, int rounds
    		uint32_t* deviceKey);
    int cuda_ecb_aes_dencrypt();
      public:
	int encrypt(const unsigned char in[],
		    const unsigned char out[], int n_blocks);
	int decrypt(const unsigned char in[],
		    const unsigned char out[], int n_blocks);
    };

}
