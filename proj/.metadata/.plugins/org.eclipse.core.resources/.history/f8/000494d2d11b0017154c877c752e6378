#define __LOG_MSG__(level,fmt,...) \
		printf( \
				"[%s:%d:%s()] [%s] " fmt, \
                __FILE__, \
                __LINE__, \
                __func__, \
                level, \
                __VA_ARGS__ \
		)

#ifdef DEBUG
#define __LOG_TRACE__(fmt,...) LOG_MSG("trace",fmt,__VA_ARGS__)
#define __LOG_DEBUG__(fmt,...) LOG_MSG("debug",fmt,__VA_ARGS__)
#else
#define __LOG_TRACE__(fmt,...)
#define __LOG_DEBUG__(fmt,...)
#endif
#define __LOG_INF__(fmt,...) LOG_MSG("info",fmt,__VA_ARGS__)
#define __LOG_WAR__(fmt,...) LOG_MSG("warning",fmt,__VA_ARGS__)
#define __LOG_ERR__(fmt,...) LOG_MSG("error",fmt,__VA_ARGS__)
#define __LOG_FATAL__(fmt,...) LOG_MSG("fatal",fmt,__VA_ARGS__)
