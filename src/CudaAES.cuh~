#include "AES.hpp"

namespace paracrypt {

    class CudaAES:public AES {
      protected:
	virtual int encrypt_cuda(const unsigned char in[], const unsigned char out[], int n_blocks, int n_rounds) = 0;
	virtual int dencrypt_cuda(const unsigned char in[], const unsigned char out[], int n_blocks, int n_rounds) = 0;
      public:
	int encrypt(const unsigned char in[], const unsigned char out[], int n_blocks);
	int decrypt(const unsigned char in[], const unsigned char out[], int n_blocks);
    };

}
